# Solana Configuration
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key_here
SOLANA_PRIVATE_KEY=your_private_key_here
SOLANA_PUBLIC_KEY=your_public_key_here

# Helius Configuration
HELIUS_API_KEY=your_helius_api_key_here

# Token Configuration
TOKEN_ADDRESS=your_token_address_here
BURN_ADDRESS=1nc1nerator11111111111111111111111111111111
INITIAL_SUPPLY=1000000000

# Buyback Configuration
MAX_SLIPPAGE_PERCENT=2    

# Rewards Configuration
REWARDS_CHECK_INTERVAL_MINUTES=15
REWARDS_CLAIM_THRESHOLD=1.0    
AUTO_PROCESS_REWARDS=true  

# Setup Configuration
UPDATE_ENV=true  # Automatically update .env with token address after setup

# Price Oracle Configuration
BIRDEYE_API_KEY=your_birdeye_api_key_here
BIRDEYE_API_URL=https://public-api.birdeye.so/defi/price

# API Configuration
PORT=3001  # Change this if port 3001 is already in use

# Environment
NODE_ENV=development # Set to production for production deployment
LOG_LEVEL=info       # Set to debug for more verbose logging
MOCK_MODE=false      # Set to true for testing with mock data

# Twitter Bot Configuration (for burn notifications only)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# Test Mode (set to true to test tweets without posting)
TEST_MODE=false