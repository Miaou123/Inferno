{
  "name": "inferno-token",
  "version": "1.0.0",
  "description": "Deflationary token on Solana with automatic buyback and milestone-based burns",
  "main": "index.js",
  "scripts": {
    "start-api": "node src/backend/api/server.js",
    "dev-api": "node src/backend/api/server.js",
    "buyback": "node src/scripts/buyback/index.js",
    "milestone": "node src/scripts/milestone/index.js",
    "setup": "node src/scripts/setup.js",
    "create-token": "node src/scripts/token/createToken.js",
    "update-metrics": "node src/scripts/updateMetrics.js",
    "test-run": "node src/scripts/test.js",
    "test-rewards": "node src/scripts/test-rewards.js",
    "decode-tx": "node src/scripts/token/decodeTx.js",
    "init": "node initialize.js",
    "start-price": "node src/priceService.js",
    "start-agent": "node src/twitter-agent/index.js",
    "agent-dev": "node --watch src/twitter-agent/index.js",
    "test-agent": "TEST_MODE=true node src/twitter-agent/index.js",
    "test-random": "TEST_MODE=true SINGLE_TWEET=true TEST_TYPE=random node src/twitter-agent/index.js",
    "test-milestone": "TEST_MODE=true SINGLE_TWEET=true TEST_TYPE=milestone node src/twitter-agent/index.js",
    "test-buyback": "TEST_MODE=true SINGLE_TWEET=true TEST_TYPE=buyback node src/twitter-agent/index.js",
    "_comment2": "Real Burn Testing Scripts",
    "list-burns": "node src/twitter-agent/test-real-burns.js list",
    "test-real-burn": "node src/twitter-agent/test-real-burns.js test",
    "test-burn-and-mark": "AUTO_MARK=true node src/twitter-agent/test-real-burns.js test",
    "start": "concurrently \"npm run buyback\" \"npm run milestone\" \"npm run start-api\"",
    "start-all": "concurrently \"npm run buyback\" \"npm run milestone\" \"npm run start-api\" \"npm run start-agent\"",
    "test": "jest"
  },
  "dependencies": {
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.98.2",
    "axios": "^1.5.0",
    "bs58": "^5.0.0",
    "concurrently": "^8.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "form-data": "^4.0.2",
    "fs": "^0.0.1-security",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.103.0",
    "path": "^0.12.7",
    "twitter-api-v2": "^1.23.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.4"
  }
}